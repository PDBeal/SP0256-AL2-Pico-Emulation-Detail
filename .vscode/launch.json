{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "showDevDebugOutput": "none",
            "request": "launch",
            //"request": "attach",
            "name": "Debug J-Link",
            "cwd": "${workspaceRoot}",
            //"cwd": "${workspaceFolder}",
            "executable": "${command:cmake.launchTargetPath}",
            "serverpath": "/opt/SEGGER/JLink/JLinkGDBServerCLExe", 
            "servertype": "jlink",
            "gdbPath": "gdb",
            "device": "RP2040_M0_0",
            "interface": "swd",
            //"interface": "jtag",
            //"jlinkscript":"${workspaceRoot}/BSP/SEGGER/K66FN2M0_emPower/Setup/Kinetis_K66_Target.js",
            "runToEntryPoint": "main",
            // Optional J-Link serial when multiple are connected
            // "serialNumber": "J-Link serial",
            // Nice extra to get register view in cortex debug
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            "postRestartCommands": [
                "break main",
                "continue"
                ]
        }
    ]
}